{
  "Kafka": {
    "ProducerConfig": {
      "BootstrapServers": "localhost:29092",
      "ClientId": "DMS.RealTimeDataGenerator"
    },
     "Topic": "realtimedata"
  },
  "DataIntervalInMs": 1000,
  "Simulations": [
    {
      "Consumer": "EVCharger",
      "SendDataInterval": "",
      "MinWatt": 0,
      "MaxWatt": 800,
      "DevicesCount": 2
    }
  ],
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "RealTimeDataGenerator"
    }
  }
}
