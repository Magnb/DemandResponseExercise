{
  "Kafka": {
    "ConsumerConfig": {
      "BootstrapServers": "localhost:29092",
      "ClientId": "DMS.ScheduleManagementApi",
      "GroupId": "scheduling"
    },
    "Topic": "realtimedata"
  },
  "MongoDB": {
    "ConnectionURI": "localhost:27017",
    "DatabaseName": "device-configurations",
    "CollectionName": "playlist"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "ScheduleManagementApi"
    }
  },
  "AllowedHosts": "*"
}
